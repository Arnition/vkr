<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        app:srcCompat="@drawable/intro" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        app:srcCompat="@drawable/icon_cat" />

    <TextView
        android:id="@+id/textlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:text="@string/logo_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/open_sans_bold"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_feed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/back"
        android:layout_marginHorizontal="70sp"
        android:layout_marginTop="35sp"
        android:backgroundTint="#9699DC"
        android:onClick="startFeedActivity"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/feed_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/button_walk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/button_feed"
        android:layout_marginHorizontal="70sp"
        android:layout_marginTop="35sp"
        android:backgroundTint="#9699DC"
        android:fontFamily="@font/open_sans_bold"
        android:onClick="startWalkActivity"
        android:text="@string/walk_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp" />

</RelativeLayout>